<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.aw.epayments">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <application
        android:name="com.aw.epayments.layouts.ContainerActivity"
        android:configChanges="keyboardHidden|orientation"
        android:icon="@mipmap/revenu_sure_foreground"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        android:windowSoftInputMode="stateHidden|adjustResize"
        tools:ignore="GoogleAppIndexingWarning"
        tools:targetApi="m">

        <activity
            android:name="com.aw.epayments.layouts.SeasonalParkingRecieptActivity"
            android:label="@string/title_activity_seasonal_parking_reciept"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.aw.epayments.layouts.LaunchScreen"
            android:noHistory="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <!-- Launcher Denotes that it will be the first launching activity -->
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.aw.epayments.layouts.naypayDasboard"
            android:screenOrientation="portrait" />



        <activity
            android:name="com.aw.epayments.activity.Recipts"
            android:label="@string/title_activity_recipts"
            android:launchMode="singleInstance"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity android:name="com.aw.epayments.activity.History">

        </activity>
        <activity android:name=".activity.HouseRentReciept" />
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.READ_PROFILE" />


</manifest>